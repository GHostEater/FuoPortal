.modal-header
    h3.modal-title Add College
.modal-body
    form(name="model.form").form-horizontal
        .form-group
            .col-sm-10
                input.form-control(type="text" name="name" required ng-model="model.name" placeholder="College name")
        .form-group
            .col-sm-10
                input.form-control(type="text" name="acronym" required ng-model="model.acronym" placeholder="Acronym")
    .modal-footer
    button.btn.btn-primary(ng-click="model.ok()") Confirm
    button.btn.btn-default(ng-click="$dismiss()") Cancel

