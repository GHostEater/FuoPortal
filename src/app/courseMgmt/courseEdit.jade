.modal-header
    h3.modal-title Edit Course
.modal-body
    form(name="model.form").form-horizontal
        .form-group
            label.control-label.col-sm-2 Course Code
            .col-sm-10
                input.form-control(type="text" name="code" required ng-model="model.course.code")
        .form-group
            label.control-label.col-sm-2 Course Title
            .col-sm-10
                input.form-control(type="text" name="title" required ng-model="model.course.title")
        .form-group
            label.control-label.col-sm-2 Course Unit
            .col-sm-10
                input.form-control(type="text" name="unit" required ng-model="model.course.unit")
        .form-group
            label.control-label.col-sm-2 Semester
            .col-sm-10
                select.form-control( name="semesterId" required ng-model="model.course.semesterId")
                    option(ng-repeat="semester in model.semesters" value="{{semester.id}}") {{semester.semester}}
        .form-group
            label.control-label.col-sm-2 Prerequisite For
            .col-sm-10
                input.form-control(type="text" name="prerequisiteFor" required ng-model="model.course.prerequisiteFor")
        .form-group
            label.control-label.col-sm-2 Level
            .col-sm-10
                select.form-control( name="levelId" required ng-model="model.course.levelId")
                    option(ng-repeat="level in model.levels" value="{{level.id}}") {{level.level}}
.modal-footer
    button.btn.btn-primary(ng-click="model.ok()") Confirm
    button.btn.btn-default(ng-click="$dismiss()") Cancel
