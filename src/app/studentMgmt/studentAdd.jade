.modal-header
    h3.modal-title Add Student
.modal-body
    form(name="model.form").form-horizontal
        .form-group
            label.control-label.col-sm-2 Matric No
            .col-sm-10
                input.form-control(type="text" name="matricNo" required ng-model="model.matricNo")
        .form-group
            label.control-label.col-sm-2 First Name
            .col-sm-10
                input.form-control(type="text" name="firstName" required ng-model="model.firstName")
        .form-group
            label.control-label.col-sm-2 Middle Name
            .col-sm-10
                input.form-control(type="text" name="middleName" required ng-model="model.middleName")
        .form-group
            label.control-label.col-sm-2 Last Name
            .col-sm-10
                input.form-control(type="text" name="lastName" required ng-model="model.lastName")
        .form-group
            label.control-label.col-sm-2 College
            .col-sm-10
                input.form-control(type="text" name="collegeId" required ng-model="model.collegeId")
        .form-group
            label.control-label.col-sm-2 Department
            .col-sm-10
                input.form-control(type="text" name="departmentId" required ng-model="model.departmentId")
        .form-group
            label.control-label.col-sm-2 Major
            .col-sm-10
                input.form-control(type="text" name="majorId" required ng-model="model.majorId")
        .form-group
            label.control-label.col-sm-2 Level
            .col-sm-10
                input.form-control(type="text" name="lastName" required ng-model="model.lastName")
        .form-group
            label.control-label.col-sm-2 Mode of Entry
            .col-sm-10
                input.form-control(type="text" name="modeOfEntry" required ng-model="model.modeOfEntry")
        .form-group
            label.control-label.col-sm-2 Session
            .col-sm-10
                input.form-control(type="text" name="lastName" required ng-model="model.lastName")
        .form-group
            label.control-label.col-sm-2 Date of Birth
            .col-sm-10
                input.form-control(type="text" name="dateBirth" required ng-model="model.dateBirth")
        .form-group
            label.control-label.col-sm-2 E-mail
            .col-sm-10
                input.form-control(type="text" name="email" required ng-model="model.email")
        .form-group
            label.control-label.col-sm-2 Address
            .col-sm-10
                input.form-control(type="text" name="address" required ng-model="model.address")
.modal-footer
    button.btn.btn-primary(ng-click="model.ok()") Confirm
    button.btn.btn-default(ng-click="$dismiss()") Cancel
