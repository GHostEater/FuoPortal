div(ng-controller="AdminStudentListController as model")
    .col-sm-12
        form.content.col-sm-4
            input.form-control(type="text" placeholder="Search" ng-model="model.searchTerm")
        table.table.table-condensed.table-striped.table-bordered
            thead
                th S/N
                th Matric No
                th Name
                th College
                th Departmart
                th Major
                th Level
                th Mode of Entry
                th E-mail
                th Actions
            tbody
                tr(ng-repeat="(key,student) in model.students | orderBy: '+lastName' | filter: model.searchTerm")
                    td {{key + 1}}
                    td {{student.matricNo}}
                    td {{student.lastName | uppercase}}, {{student.firstName}} {{student.middleName}}
                    td {{student.college}}
                    td {{student.department}}
                    td {{student.major}}
                    td {{student.level}}
                    td {{student.modeOfEntry}}
                    td {{student.email}}
                    td
                        a.btn.btn-primary(href="/lecturer/myTranscript/{{student.id}}") View Transcript