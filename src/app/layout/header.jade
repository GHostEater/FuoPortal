nav.navbar.navbar-inverse(ng-controller = "HeaderController as model")
    .container-fluid
        .navbar-header
            button.navbar-toggle(type="button",data-toggle="collapse",data-target="#collapse")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="/") FUO Portal
        #collapse.collapse.navbar-collapse
            ul.nav.navbar-nav(ng-show="model.user.loggedIn")
                li(ui-sref-active="active")
                    a(ui-sref="home")
                        span.glyphicon.glyphicon-home &nbsp
                        span Home
                li.dropdown(ng-show="model.user.sysRank == 1")
                    a.dropdown-toggle(data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false")
                        span.glyphicon.glyphicon-wrench &nbsp
                        span System Management
                        span.caret
                    ul.dropdown-menu
                        li(ui-sref-active="active")
                            a(ui-sref="academicAffair") Academic Affair Management
                        li(ui-sref-active="active")
                            a(ui-sref="college") College Management
                        li(ui-sref-active="active")
                            a(ui-sref="department") Department Management
                        li(ui-sref-active="active")
                            a(ui-sref="major") Major Management
                        li(ui-sref-active="active")
                            a(ui-sref="course") Course Management
                        li(ui-sref-active="active")
                            a(ui-sref="courseToMajor") Course To Major Management
                        li(ui-sref-active="active")
                            a(ui-sref="level") Level Management
                        li(ui-sref-active="active")
                            a(ui-sref="modeOfEntry") Mode of Entry Management
                        li(ui-sref-active="active")
                            a(ui-sref="session") Session Management
                        li(ui-sref-active="active")
                            a(ui-sref="semester") Semester Management
                        li(ui-sref-active="active")
                            a(ui-sref="lecturer") Lecturer Management
                        li(ui-sref-active="active")
                            a(ui-sref="lecturerRank") Lecturer Rank Management
                        li(ui-sref-active="active")
                            a(ui-sref="lecturerStatus") Lecturer Status Management
                        li(ui-sref-active="active")
                            a(ui-sref="levelAdviser") Level Adviser Mgmt
                        li(ui-sref-active="active")
                            a(ui-sref="examOfficer") Exam Officer Mgmt
                        li(ui-sref-active="active")
                            a(ui-sref="co") College Officer Management
                        li(ui-sref-active="active")
                            a(ui-sref="hod") HOD Management
                        li(ui-sref-active="active")
                            a(ui-sref="student") Student Management
                li(ui-sref-active="active" ng-show="model.user.sysRank == 5")
                    a(ui-sref="courseRegistration") Course Registration
                li(ui-sref-active="active" ng-show="model.user.sysRank == 5")
                    a(ui-sref="courseSlip") Course Slip
                li(ui-sref-active="active" ng-show="model.user.sysRank == 5")
                    a(ui-sref="myResult") Result
                li(ui-sref-active="active" ng-show="model.user.sysRank == 3 || model.user.sysRank == 4 || model.user.sysRank == 9 || model.user.sysRank == 10")
                    a(ui-sref="myCourses") My Courses
                li(ui-sref-active="active" ng-show="model.user.sysRank == 3")
                    a(ui-sref="courseAllocation") Course Allocation
                li(ui-sref-active="active" ng-show="model.user.sysRank == 3 || model.user.sysRank == 9")
                    a(ui-sref="resultComputation") Result Computation
                li(ui-sref-active="active" ng-show="model.user.sysRank == 9")
                    a(ui-sref="courseToMajor") Course To Major Management
                li(ui-sref-active="active" ng-show="model.user.sysRank == 3")
                    a(ui-sref="examOfficer") Exam Officer Mgmt
