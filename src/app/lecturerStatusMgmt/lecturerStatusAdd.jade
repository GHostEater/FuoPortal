.modal-header
    h3.modal-title Add Lecturer Status
.modal-body
    form(name="model.form").form-horizontal
        .form-group
            label.control-label.col-sm-2 Lecturer Status
            .col-sm-10
                input.form-control(type="text" name="lecturerStatus" required ng-model="model.status")
.modal-footer
    button.btn.btn-primary(ng-click="model.ok()") Confirm
    button.btn.btn-default(ng-click="$dismiss()") Cancel
