div(ng-controller="LevelController as model")
    .col-sm-12
        .row.content
            button.col-sm-2.btn.btn-lg.btn-primary(ng-click="model.add()") Add Level
        form.content.col-sm-4
            input.form-control(type="text" placeholder="Search" ng-model="model.searchTerm")
        table.table.table-striped.table-bordered
            thead
                th S/N
                th Level
            tbody
                tr(ng-repeat="(key,levels) in model.level | orderBy: '+Id' | filter: model.searchTerm")
                    td {{key + 1}}
                    td {{levels.Id}}
                    td {{level.level}}
                    td
                        button.btn.btn-warning(ng-click="model.edit(levels.Id)") Edit
                        button.btn.btn-danger(ng-click="model.remove(levels.level)") Delete

