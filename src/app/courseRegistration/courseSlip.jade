div(ng-controller="CourseSlipController as model")
    .col-sm-12
        .row.visible-print
            .col-sm-1
                img(src="img/logo.png")
            .col-sm-10.text-center
                h2 FOUNTAIN UNIVERSITY, OSOGBO
                h3 (University of Nasrul-Lahi-Il-Fatih Society)
                h4 {{model.college.name}}
        .row.visible-print
            .col-sm-2.col-sm-offset-10
                img.img-responsive(ng-src="{{model.host}}/img/students/{{model.student.img}}" width="150" height="150")
        .row.visible-print
            span.col-sm-4 Session: {{model.session.session}}
            span.col-sm-4.col-sm-offset-4 Semester: {{model.semester.semester}}
                span(ng-show="model.semester.semester == 1") st Semester
                span(ng-show="model.semester.semester == 2") nd Semester
        div.visible-print
            span.row Department: {{model.student.department}}
            span.row Major: {{model.student.major}}
            span.row Name:&nbsp
                b {{model.student.lastName | uppercase}},&nbsp
                span {{model.student.firstName}} {{model.student.middleName}}
            span.row Matric Number: {{model.student.matricNo}}
        table.table.table-striped.table-bordered.table-condensed
            thead
                th Course Code
                th Course Title
                th Unit
                th Type
            tbody
                tr(ng-repeat="course in model.courses | orderBy: '+code'")
                    td {{course.code}}
                    td {{course.title}}
                    td {{course.unit}}
                    td {{course.type}}

        span.row Total Units Registered: {{model.counter}}
    .row.visible-print
        .col-sm-5
            span ________________________&nbsp
            br
            span Student's Signature/Date
        .col-sm-5.col-sm-offset-2
            span ____________________________&bnsp
            br
            span Level Adviser Signature/Date