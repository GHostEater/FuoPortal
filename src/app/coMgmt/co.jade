div(ng-controller="CoController as model")
    .col-sm-12
        .row.content
            button.col-sm-2.btn.btn-lg.btn-primary(ng-click="model.add()") Add College Officer
        form.content.col-sm-4
            input.form-control(type="text" placeholder="Search" ng-model="model.searchTerm")
        table.table.table-striped.table-bordered
            thead
                th S/N
                th Name
                th College
                th E-mail
                th Actions
            tbody
                tr(ng-repeat="(key,co) in model.cos | orderBy: '+lastName' | filter: model.searchTerm")
                    td {{key + 1}}
                    td {{co.lastName | uppercase}}, {{co.firstName}} {{co.middleName}}
                    td {{co.college}}
                    td {{co.email}}
                    td
                        button.btn.btn-warning(ng-click="model.edit(co.id)") Edit
                        button.btn.btn-danger(ng-click="model.remove(co.id)") Delete



