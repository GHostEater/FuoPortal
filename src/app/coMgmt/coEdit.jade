.modal-header
    h3.modal-title Edit Co
.modal-body
    form(name="model.form").form-horizontal

        .form-group
            .col-sm-10
                input.form-control(type="text" name="firstName" required ng-model="model.co.firstName" placeholder="First Name")
        .form-group
            .col-sm-10
                input.form-control(type="text" name="middleName" required ng-model="model.co.middleName" placeholder="Middle name")
        .form-group
            .col-sm-10
                input.form-control(type="text" name="lastName" required ng-model="model.co.lastName" placeholder="Last Name")
        .form-group
            .col-sm-10
                select.form-control( name="collegeId" required ng-model="model.co.collegeId")
                    option(value="") College
                    option(ng-repeat="college in model.colleges" value="{{college.id}}") {{college.name}}
        .form-group
            .col-sm-10
                input.form-control(type="text" name="email" required ng-model="model.co.email" placeholder="E-mail Address")
        .form-group
            .col-sm-10
                input.form-control(type="password" name="password" required ng-model="model.co.password" placeholder="Password")
.modal-footer
    button.btn.btn-primary(ng-click="model.ok()") Confirm
    button.btn.btn-default(ng-click="$dismiss()") Cancel

