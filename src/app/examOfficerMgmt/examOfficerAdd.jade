.modal-header
    h3.modal-title Add Exam Officer for the Department
.modal-body
    form(name="model.form").form-horizontal
        .form-group
            .col-sm-10
                select.form-control(name="lecturerId" required ng-model="model.lecturerId")
                    option(value="") Lecturer
                    option(ng-repeat="lecturer in model.lecturers" value="{{lecturer.id}}") {{lecturer.lastName}}, {{lecturer.firstName}} {{lecturer.middleName}}
    .modal-footer
    button.btn.btn-primary(ng-click="model.ok()") Confirm
    button.btn.btn-default(ng-click="$dismiss()") Cancel
