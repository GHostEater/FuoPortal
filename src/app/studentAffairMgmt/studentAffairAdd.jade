.modal-header
    h3.modal-title Add Student Affair Officer
.modal-body
    form(name="model.form").form-horizontal
        .form-group
            .col-sm-10
                input.form-control(type="text" name="firstName" required ng-model="model.firstName" placeholder="First Name")
        .form-group
            .col-sm-10
                input.form-control(type="text" name="middleName" required ng-model="model.middleName" placeholder="Middle Name")
        .form-group
            .col-sm-10
                input.form-control(type="text" name="lastName" required ng-model="model.lastName" placeholder="Last Name")
        .form-group
            .col-sm-10
                select.form-control(name="sex" required ng-model="model.sex")
                    option(value="") Select Sex
                    option(value="Male") Male
                    option(value="Female") Female
        .form-group
            .col-sm-10
                input.form-control(type="text" name="email" required ng-model="model.email" placeholder="E-mail")
        .form-group
            .col-sm-10
                select.form-control(name="position" required ng-model="model.position")
                    option(value="") Select Position
                    option(value="0") Dean
                    option(value="1") Sub Dean
                    option(value="2") Officer
        .form-group
            .col-sm-10
                input.form-control(type="password" name="password" required ng-model="model.password" placeholder="Password")
.modal-footer
    button.btn.btn-primary(ng-click="model.ok()") Confirm
    button.btn.btn-default(ng-click="$dismiss()") Cancel

