div(ng-controller="StudentAffairController as model")
    .col-sm-12
        .row.content
            button.col-sm-3.btn.btn-lg.btn-primary(ng-click="model.add()") Add Student Affair Officer
        form.content.col-sm-4
            input.form-control(type="text" placeholder="Search" ng-model="model.searchTerm")
        table.table.table-striped.table-bordered
            thead
                th S/N
                th Name
                th E-mail
                th Gender
                th Position
                th Actions
            tbody
                tr(ng-repeat="(key,studentAffair) in model.studentAffairs | orderBy: '+lastName' | filter: model.searchTerm")
                    td {{key + 1}}
                    td {{studentAffair.lastName}}, {{studentAffair.firstName}} {{studentAffair.middleName}}
                    td {{studentAffair.email}}
                    td {{studentAffair.sex}}
                    td
                        span(ng-show="studentAffair.position == 0") Dean
                        span(ng-show="studentAffair.position == 1") Sub Dean
                        span(ng-show="studentAffair.position == 2") Officer
                    td
                        button.btn.btn-warning(ng-click="model.edit(studentAffair.id)") Edit
                        button.btn.btn-danger(ng-click="model.remove(studentAffair.id)") Delete



