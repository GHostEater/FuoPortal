div(ng-controller="HodController as model")
    .col-sm-12
        .row.content
            button.col-sm-3.btn.btn-lg.btn-primary(ng-click="model.add()") Add Head of Department
        form.content.col-sm-4
            input.form-control(type="text" placeholder="Search" ng-model="model.searchTerm")
        table.table.table-striped.table-bordered
            thead
                th S/N
                th Name
                th Department
                th Actions
            tbody
                tr(ng-repeat="(key,hod) in model.hods | orderBy: '+department' | filter: model.searchTerm")
                    td {{key + 1}}
                    td {{hod.lastName}}, {{hod.firstName}} {{hod.middleName}}
                    td {{hod.department}}
                    td
                        button.btn.btn-danger(ng-click="model.remove(hod.id)") Delete